<div class="bg-light fullheight">
  <div class="container">
    <div class="d-flex w-100 justify-content-between pt-3">
      <%= link_to material_icon.navigate_before.md_36, slides_create_channel_path %>
      <%= link_to material_icon.exit_to_app.md_36, root_path %>
      <%= link_to material_icon.navigate_next.md_36, slides_broadcast_channel_path %>
    </div>
    <div class="row cover py-3 py-sm-5">

      <div class="col-sm pb-2">
        <div class="card bg-blue h-100">
          <div class="my-auto p-3">
            <span class="badge badge-light">6 de 9</span>
            <h2><small>Subscribing to a channel</small></h2>
          </div>
        </div>
      </div>

      <div class="col-sm align-self-center">
        <div class="card bg-blue h-100">
          <% text = "jQuery(document).on 'turbolinks:load', ->
  messages = $('#messages')
  if messageId = messages.data('chat-room-id')
    App.conversation = App.cable.subscriptions.create {
        channel: \"ChatRoomChannel\"
        chat_room_id: messages.data(\"chat-room-id\")
      },
      connected: ->
        console.log(\"connected to chat room channel\")

      disconnected: ->
        # Called when the subscription has been terminated by the server

      received: (data) ->
        console.log(\"received\")
        $('#bottom-of-messages-thread').remove();
        messages.append(data.message)
        messages.append(\"<div id='bottom-of-messages-thread' class='pt-2'></div>\");
        document.getElementById(\"bottom-of-messages-thread\").scrollIntoView();" %>
          <%= syntax_highlight(text) %>
        </div>
      </div>
    </div>
  </div>
</div>
